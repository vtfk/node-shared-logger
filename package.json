  "author": "Ingar Helgesen (https://github.com/sherex)",
  "license": "MIT",
  "dependencies": {
    "packpath": "0.1.0",
    "syslog-client": "^1.1.1"
  },
  "devDependencies": {
    "coveralls": "3.1.0",
    "jest": "26.2.2",
    "jest-extended": "0.11.5",
    "standard": "14.3.4"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
